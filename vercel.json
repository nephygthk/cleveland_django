{
  "version": 2,
  "builds": [
    {
      "src": "clevhospital/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "installCommand": "python3.9 -m pip install --upgrade pip && pip install -r requirements.txt && python3.9 manage.py collectstatic --noinput"
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "clevhospital/wsgi.py" }
  ]
}
